<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/window_background</item>


    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
    </style>
    <style name="TextAppearance.Cat" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">@color/cat_text_link</item>
    </style>

    <style name="TextAppearance.Cat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cat_button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Buttons -->

    <style name="Widget.Cat.Button" parent="Widget.AppCompat.Button">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Cat.Button</item>
        <item name="android:minHeight">@dimen/cat_button_height</item>
    </style>

    <style name="Widget.Cat.Button.Small">
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/cat_button_small</item>
        <item name="android:minHeight">@dimen/cat_button_small_height</item>
    </style>

</resources>
